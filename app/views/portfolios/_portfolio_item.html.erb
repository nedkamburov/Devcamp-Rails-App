 <div class="col" data-id="<%= portfolio_item.id %>">
    <div class="card shadow-sm">
      <%= image_tag portfolio_item.thumb_image, class: "bd-placeholder-img card-img-top" unless portfolio_item.thumb_image.nil? %>
      <div class="card-body">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
        <span><%= portfolio_item.subtitle %></span>
      </div>
    </div>
</div>
