<%= form_for(@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group mb-3">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <label class="btn btn-primary">
          Upload a main image <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group mb-3">
        <label class="btn btn-primary">
          Upload a thumbnail image <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
  </div>

  <hr>

  <div class="col-md-12">
    <h2>Technolgies Used:</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>

      <div class="mt-3">
        <%= link_to_add_association 'Add Technology', form, :technologies %>
      </div>
    </div>

    <div class="form-group mt-3">
      <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
