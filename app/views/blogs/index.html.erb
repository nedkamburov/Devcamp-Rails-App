<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<div id="blogs">
  <% @blogs.each do |blog| %>
    <%= render blog %>
    <p>Status: <%= link_to blog.status, toggle_status_blog_path(blog) %></p>
    <p>
      <%= link_to "Show this blog", blog %>
    </p>
    <p> <%= link_to "Delete", blog, method: :delete, data: {confirm: "Are you sure?"} %> </p>
  <% end %>
</div>
<%= link_to "New blog", new_blog_path %>
